<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.ifraag.arrested"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="11"
        android:targetSdkVersion="19" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.ifraag.arrested.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.ifraag.arrested.SettingsActivity"
            android:label="@string/title_activity_settings"
            android:parentActivityName="com.ifraag.arrested.MainActivity">
            <!-- Beginning in Android 4.1 (API level 16), you can declare the parent with this parentActivityName-->

            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.ifraag.arrested.MainActivity" />
        </activity>
    </application>

</manifest>
